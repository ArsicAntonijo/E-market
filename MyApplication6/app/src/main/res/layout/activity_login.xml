<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="211dp"
                android:layout_height="101dp"
                app:srcCompat="@drawable/market_logo"
                android:layout_gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/username"
                android:drawableLeft="@mipmap/account"
                android:hint="Korisnicko ime"
                android:layout_marginTop="20dp"

                android:paddingLeft="0dp"
                android:drawablePadding="5dp"
                android:textColorHint="#999"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:drawableLeft="@mipmap/lock"
                android:hint="Lozinka"
                android:layout_marginTop="10dp"

                android:paddingLeft="0dp"
                android:drawablePadding="5dp"
                android:textColorHint="#999"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Uloguj se"
                android:id="@+id/buttonLogIn"
                android:background="@drawable/selector_xml_btn_yellow"
                android:layout_gravity="center_horizontal"
                android:onClick="checkLogin"/>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="218dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="Kliknite ovde da se najavite kao gost!"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>